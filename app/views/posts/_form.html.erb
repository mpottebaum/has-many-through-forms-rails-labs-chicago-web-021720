<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :categories %>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
    
    <%= f.fields_for :categories do |c| %>
        <%= c.label :name %>
        <%= c.text_field :name %>
    <% end %>

    <%= f.submit %>
<% end %>